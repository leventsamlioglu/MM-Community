


<!DOCTYPE html>
<html lang="en">
	<%- include("./partials/head.ejs") %>

	
	
	<body>
	<a href="/" class="btn btn-info">Back</a>

		<div
			class="card text-center m-auto mt-4 mb-4 border-info"
			style="width: 28rem"
		>
			<img
				src="https://www.techbooky.com/wp-content/uploads/2022/09/Blogging-Platforms.jpeg"
				class="card-img-top"
				alt="blog"
			/>
			<div class="card-body">
				<h5 class="card-title"><%= post.title%></h5>
				<p class="card-text"><%= post.question%></p>

				<form action="/editPost/<%= post._id%>" method="post">
					<button
						type="button"
						class="btn btn-warning"
						data-bs-toggle="modal"
						data-bs-target="#exampleModal"
					>
						Edit
					</button>
				</form>
				<form action="/postDelete/<%= post._id%>" method="post">
					<button class="btn btn-danger">Delete</button>
				</form>
			</div>

			<button
				class="btn btn-primary"
				type="button"
				data-bs-toggle="modal"
				data-bs-target="#commentModal"
			>
				Make a Comment
			</button>
			<div class="card-footer text-muted">Last update: 3 hours ago</div>
		</div>

		<!-- Comments -->
		<% if(comments){ %>
			<% comments.forEach((comment)=>{ %>
			<div class="row d-flex justify-content-center">
				<div class="col-md-7 col-lg-6">
						<div class="card shadow-0 border" style="background-color: #f0f2f5">
							<div class="card-body p-4">
								<div class="card mb-4">
									<div class="card-body">
										<p><%= comment.comment%></p>
				
										<div class="d-flex justify-content-between">
											<div class="d-flex flex-row align-items-center">
												<img
													src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(32).webp"
													alt="avatar"
													width="25"
													height="25"
												/>
												<p class="small mb-0 ms-2">Commented by <%=comment.owner%></p>
											</div>
											<div class="d-flex flex-row align-items-center">
												<p class="small text-muted mb-0">Upvote?</p>
												<i
													class="far fa-thumbs-up mx-2 fa-xs text-black"
													style="margin-top: -0.16rem"
												></i>
												<p class="small text-muted mb-0">3</p>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<%	}) %>
					
			<% } %>
			

		<!-- Edit Modal -->
		<%- include("./partials/editModal.ejs") %>

		<!-- Comment Modal -->
		<%- include("./partials/commentModal.ejs") %>
</body>
</html>






	

